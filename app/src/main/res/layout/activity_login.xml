<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/reg_email2"
        android:layout_width="333dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:ems="10"
        android:hint="@string/emailll"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/reg_password2"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="146dp"
        android:ems="10"
        android:hint="@string/passworddd"
        android:inputType="textPersonName"
        android:password="true" />

    <Button
        android:id="@+id/reg_create_btn2"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/reg_password2"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="282dp"
        android:autoText="false"
        android:background="#0678A9"
        android:text="LOG IN"
        android:textColor="#ffffff"
        android:textSize="23sp" />
</RelativeLayout>